<h1>Add your own wisdom</h1>

<%= form_for @quote do |f| %>
  <% if @quote.errors.any? %>
    <div class="errorsExplanation">
      <h2><% pluralize(@quote.errors.count, "error") %>
    prohibited this quote from being saved:</h2>
      <ul>
        <% @quote.errors.full_message.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>

  <% end %>
<div class="container">
  <%= f.text_area :text %></br>
  <%= f.submit %>
  <% end %>
</div>
